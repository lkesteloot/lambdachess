{
    "compilerOptions": {
        // We target ES2015 (aka ES6) browsers.
        "target": "es2015",
        "module": "es2015",
        "moduleResolution": "node",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "incremental": true,
        "declaration": false,
        "declarationMap": false,
        "sourceMap": false,
        "esModuleInterop": false,
        "outDir": "src",
        // Be explicit that we're targeting web.
        "lib": [
            "es2015",
            "dom"
        ]
    },
    "include": [
        "src/*.ts"
    ],
    "exclude": []
}
